<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/step_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/switch_button"
        android:fontFamily="@font/poppins_semibold"
        android:hint="@string/write_step"
        android:paddingStart="15dp"
        android:paddingEnd="@dimen/inner_padding_right"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/hint2"
        android:textSize="15sp"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/remove_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic__close_35"
        >

    </ImageView>


</LinearLayout>