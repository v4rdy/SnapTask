<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
   <LinearLayout
       android:id="@+id/linear_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white"
       android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_date"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <RadioGroup
            android:id="@+id/date_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/today_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn"
                android:button="@drawable/radio_btn"
                android:checked="false"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/today"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/tomorrow_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn"
                android:button="@drawable/radio_btn"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/tomorrow"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/choose_day_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_btn"
                android:button="@drawable/radio_btn"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/choose_day"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="16sp" />

        </RadioGroup>

    </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:text="@string/choose_priority"
           android:textAlignment="center"
           android:textColor="@color/dark_blue"
           android:textSize="22sp"
           android:textStyle="bold" />

       <RadioGroup
           android:id="@+id/priority_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/low_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/radio_btn"
            android:button="@drawable/radio_btn"
            android:checked="false"
            android:drawableStart="@drawable/green"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="10dp"
            android:text="@string/low"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/medium_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/radio_btn"
            android:button="@drawable/radio_btn"
            android:drawableStart="@drawable/yellow"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="10dp"
            android:text="@string/medium"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/high_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/radio_btn"
            android:button="@drawable/radio_btn"
            android:drawableStart="@drawable/red"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="10dp"
            android:text="@string/high"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="16sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/switch_button"
        android:fontFamily="@font/poppins_semibold"
        android:hint="@string/task_name"
        android:paddingStart="15dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/hint2"
        android:textSize="15sp"
        />
        <LinearLayout
            android:id="@+id/subtask_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

       <Button
           android:id="@+id/add_subtask_btn"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp"
           android:background="#00FFFFFF"
           android:drawableStart="@drawable/add_button"
           android:fontFamily="@font/poppins_semibold"
           android:text="@string/add_subtask"
           android:textAllCaps="false"
           android:textColor="@color/hint2"
           android:textSize="15sp"
            />
       <Button
           android:id="@+id/apply_btn"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/apply_button"
           android:drawableStart="@drawable/ic_baseline_check_24"
           android:paddingStart="10dp"
           android:paddingEnd="10dp"
           android:fontFamily="@font/poppins_semibold"
           android:text="@string/add_task"
           android:textAllCaps="false"
           android:layout_gravity="center"
           android:textColor="@color/dark_blue"
           android:textSize="15sp"
           />
   </LinearLayout>
</ScrollView>